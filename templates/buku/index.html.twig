{% extends 'base.html.twig' %}

{% block title %}Buku index{% endblock %}

{% block body %}
    <h1>Buku index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Judul</th>
                <th>Halaman</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for buku in bukus %}
            <tr>
                <td>{{ buku.id }}</td>
                <td>{{ buku.judul }}</td>
                <td>{{ buku.halaman }}</td>
                <td>
                    <a href="{{ path('buku_show', {'id': buku.id}) }}">show</a>
                    <a href="{{ path('buku_edit', {'id': buku.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('buku_new') }}">Create new</a>
    {% endif %}
{% endblock %}
